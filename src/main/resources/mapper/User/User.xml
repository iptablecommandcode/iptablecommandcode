<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 위 코드가 mapper 설정을 하는 코드 -->

<!-- Mapper를 사용하는 Repository의 전체 경로를 적어줘야함. -->
<mapper namespace="me.synology.freash97.Sign.Repository.UserMapper">
    <select id="UserSelect" resultType="me.synology.freash97.Sign.Entity.UserEntity">
        SELECT * FROM USER_TABLE
    </select>

    <insert id="userAdd" parameterType="me.synology.freash97.Sign.Entity.UserEntity">
        INSERT INTO USER_TABLE(OPERATION_NM,ID,PASSWORD,ACCOUNTAUTHLEVEL,NAME,EMAIL,PHONE,POSTCODE,ADDRESS1,ADDRESS2,CREATION_DATE,UPDATE_DATE,LAST_PAGE,LAST_OPERATION_NM)
        VALUES (#{OPERATION_NM}, #{ID}, #{PASSWORD}, #{ACCOUNTAUTHLEVEL}, #{NAME}, #{EMAIL}, #{PHONE}, #{POSTCODE}, #{ADDRESS1}, #{ADDRESS2}, #{CREATION_DATE}, #{UPDATE_DATE}, #{LAST_PAGE}, #{LAST_OPERATION_NM})
    </insert>
</mapper>