<?xml version="1.0" encoding="UTF-8"?>
<!-- mapper 설정하는 코드 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper를 사용하는 Repository의 전체 경로를 적어줘야함. -->
<mapper namespace="me.synology.freash97.Notice.Mapper.NoticeMapperRepository">

    <!-- 게시글 작성 -->
    <!-- selectKey 관련 확인 후 수정 -->
    <insert id="insertNotice" parameterType="me.synology.freash97.Notice.Entity.NoticeEntity">
        <selectKey resultType="int" order="BEFORE">
            SELECT LAST_INSERT_ID() FROM NOTICE_M
        </selectKey>
        INSERT INTO NOTICE_M(NOTICE_SEQ, WRITER, TITLE, CONTENT, NOTICE_STTS_CD, CREATE_DATE, UPDATE_DATE, OPERATOR)
        VALUES (#{noticeSeq}, #{writer}, #{title}, #{content}, #{noticeSttsCd}, #{createDate}, #{updateDate}, #{operator})
    </insert>

    <!-- 게시글 전체 조회 (index) -->
    <select id="findAllNotice" resultType="me.synology.freash97.Notice.Entity.NoticeEntity">
            SELECT * FROM NOTICE_M
    </select>

    <!-- 특정 게시글 1건 조회 -->
    <select id="findByNoticeSeq" parameterType="int" resultType="me.synology.freash97.Notice.Entity.NoticeEntity">
        SELECT * FROM NOTICE_M WHERE NOTICE_SEQ = #{noticeSeq}
    </select>

    <!-- 게시글 수정 -->
    <update id="updateNotice" parameterType="me.synology.freash97.Notice.Entity.NoticeEntity">
        UPDATE NOTICE_M
        SET TITLE = #{title}, CONTENT = #{content}, NOTICE_STTS_CD = #{noticeSttsCd}, CREATE_DATE = #{createDate}, UPDATE_DATE= #{updateDate}
        WHERE NOICE_SEQ = #{noticeSeq}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteNotice" parameterType="int">
        DELETE FROM NOTICE_M WHERE NOTICE_SEQ = #{noticeSeq}
    </delete>

</mapper>